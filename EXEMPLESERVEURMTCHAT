import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.ArrayList;
import java.util.List;


public class ServeurMTjeu extends Thread {
	//DANS CE PROGRAMME ON ESSAI DE RENTRER EN CONTACT ENTRE DIFFERENT JOUEUR 
	// LE JOUEUR DOIT SPECIFIE AVEC QUEL JOUEUR IL JOUE GRACE A SON NUMERO
	
	int nbJoueurs;
	//pour noter quel joueur cest
	private List<Conversation> joueursConnectes = new ArrayList<>();
	
	public void run() {
		try {
			ServerSocket ss = new ServerSocket(2345);
			while(true) {
				Socket s=ss.accept();
				++nbJoueurs;
				Conversation c= new Conversation(s,nbJoueurs);
				joueursConnectes.add(c);
				c.start();
			}
		}catch (IOException e) {
			e.printStackTrace();
		}
	}//a chaque joueur en plus, le num du joueur connecté augmente 
	
	public void broadCast(String message, int[]numeroJoueur) {
		try {
			for (Conversation c :joueursConnectes) {
				boolean trouve = false; 
				for (int i=0;i<numeroJoueur.length;i++) {
					if (c.numeroJoueur==numeroJoueur[i]) {
						trouve=true;
						break;
						
					}
				}
				if (trouve==true) {
					PrintWriter pw = new PrintWriter(c.socket.getOutputStream(),true);
					pw.println(message); 
				}
				
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	class Conversation extends Thread{
		protected Socket socket;
		protected int numeroJoueur;
		
		public Conversation (Socket socket, int num) {
			super();
			this.socket = socket; 
			this.numeroJoueur=num;
		} 
		
		public void run() {
			//code de la conv
			try {
				InputStream is = socket.getInputStream();
				InputStreamReader isr = new InputStreamReader(is);
				BufferedReader br = new BufferedReader(isr);
				
				OutputStream os = socket.getOutputStream();
				PrintWriter pw = new PrintWriter(os,true);
				
				String IP = socket.getRemoteSocketAddress().toString();
				
				System.out.println("Connexion du client numéro"+numeroJoueur+"IP="+IP);
				pw.println("Bienvenue, vous ête le client numéro"+numeroJoueur);
				
				while(true) {
					String req;
					while((req=br.readLine())!=null) {
						String [] t=req.split("-");
						String message =t[0];
						String[] t2=t[1].split(",");
						int[]numeroJoueurs=new int [t2.length];
						for (int i = 0; i<t2.length;i++) {
							numeroJoueurs[i]=Integer.parseInt(t2[i]);
						}
						broadCast(message, numeroJoueurs);

					}
				}//CELA PERMET QUE LE CODE PUISSE ETRE LU PAR UN AUTRE CLIENT 
				
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
	}
	public static void main (String[] args) {
		new ServeurMTjeu().start();
	}
}
